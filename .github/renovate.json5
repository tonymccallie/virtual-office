{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'docker:enableMajor',
    'monorepo:nrwl',
    'monorepo:nest',
    'monorepo:angular',
    'monorepo:angular-cli',
    'monorepo:angular-eslint',
    'monorepo:jest',
    'group:monorepos',
    ':semanticCommits',
    ':enablePreCommit',
    ':automergeDigest',
    ':automergeBranch',
    'helpers:pinGitHubActionDigests',
  ],
  semanticCommitScope: 'deps',
  assignees: ['wgd3'],
  dependencyDashboard: true,
  dependencyDashboardTitle: 'Renovate Dashboard ðŸ¤–',
  suppressNotifications: ['prIgnoreNotification'],
  rebaseWhen: 'conflicted',
  packageRules: [
    {
      description: 'Automatically merge minor and patch-level updates',
      matchUpdateTypes: ['minor', 'patch', 'digest'],
      automerge: true,
      automergeType: 'branch',
    },
    {
      matchPackagePatterns: ['^@nx'],
      groupName: 'Nx Monorepo',
    },
    {
      matchPackagePatterns: ['^@angular'],
      groupName: 'Angular Framework',
    },
    {
      matchPackagePatterns: ['^@nestjs'],
      groupName: 'NestJS Framework',
    },
    {
      matchPackagePatterns: ['^@ngrx'],
      groupName: 'NgRx Framework',
    },
    {
      matchDepTypes: ['dependencies'],
      semanticCommitType: 'build',
    },
    {
      matchPackageNames: ['semantic-release'],
      semanticCommitType: 'build',
    },
    {
      matchPackageNames: ['@types/jest'],
      groupName: 'jest monorepo',
    },
    {
      matchPackageNames: ['^eslint'],
      groupName: 'eslint monorepo',
    },
    // labelling for package version level
    {
      matchUpdateTypes: ['major'],
      labels: ['type/major'],
    },
    {
      matchUpdateTypes: ['minor'],
      labels: ['type/minor'],
    },
    {
      matchUpdateTypes: ['patch'],
      labels: ['type/patch'],
    },
    {
      matchDatasources: ['github-releases', 'github-tags'],
      addLabels: ['renovate/github-release'],
    },
    {
      matchManagers: ['github-actions'],
      addLabels: ['renovate/github-action'],
      automerge: true,
      automergeType: 'branch',
      ignoreTests: true,
      matchUpdateTypes: ['minor', 'patch', 'digest'],
    },
  ],
}
